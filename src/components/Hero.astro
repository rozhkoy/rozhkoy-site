---
import { Button } from './shared/ui/Button';
import { Twitter, Linkedin, Github, GithubIcon } from 'lucide-preact';
import { SocialLinks } from './shared/ui/SocialLinks';
---

<section class='py-20'>
	<div class='container mx-auto px-4'>
		<h1 class='text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl
    xl:text-[3.4rem] 2xl:text-[3.75rem] animated-text text-center'>Hi, I'm Rozhko Yaroslav</h1>
		<p class='text-lg font-normal text-gray-900 mt-5 text-center'>Front-end developer with some cool personal projects.</p>
		<SocialLinks />
	</div>
</section>

<style>
	@keyframes gradientAnimation {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	.animated-text {
		background: linear-gradient(45deg, #ef008f, #6ec3f4, #7038ff, #c9c9c9);
		background-size: 300% 300%;
		color: transparent;
		-webkit-background-clip: text;
		background-clip: text;
		animation: gradientAnimation 30s ease infinite;
	}
</style>
