---
import { Breadcrumb } from '../components/sections/Breadcrumb';
import { Footer } from '../components/sections/Footer';
import { Header } from '../components/sections/Header';
import { ImageGrid } from '../components/shared/ui/ImageGrid';
import { ProjectInfo } from '../components/shared/ui/ProjectInfo';
import { Container } from '../components/shared/ui/Container';
import Layout from '../layouts/Layout.astro';

const { frontmatter } = Astro.props;
---

<style>
	article :global(ul) {
		@apply list-disc ml-6 mt-4 gap-2 flex flex-col;
	}

	article :global(p) {
		@apply mb-4 gap-2;
	}

	article :global(h1) {
		@apply text-3xl font-bold mb-3;
	}

	article :global(h2) {
		@apply text-2xl font-bold mb-2;
	}

	article :global(h3) {
		@apply text-xl font-bold mb-2;
	}

	article :global(h4) {
		@apply text-lg font-bold mb-2;
	}

	article :global(h5) {
		@apply text-base font-bold mb-2;
	}

	article :global(h6) {
		@apply text-sm font-bold mb-2;
	}
</style>

<Layout title={frontmatter.title}>
	<Header client:only />
	<Breadcrumb client:only />
	<Container className='py-5 md:py-9'>
		<ImageGrid banner={frontmatter.banner} firstSlot={frontmatter.firstSlot} secondSlot={frontmatter.secondSlot} />
	</Container>

	<ProjectInfo year={frontmatter.year} title={frontmatter.title} github={frontmatter.github} website={frontmatter.website} />
	<Container className=' py-5 md:py-9'>
		<article>
			<slot />
		</article>
	</Container>

	<Footer client:only />
</Layout>
